        "mode=755",
        "uid=655360",
        "gid=655360",
        "nosuid"
      ],
      "performInIntermediateNamespace": true
    },
    {
			"destination": "/dev/qemu_pipe",
			"type": "bind",
			"source": "/var/run/chrome/anbox/sockets/qemu_pipe",
			"options": [
        "mode=666",
				"bind"
			]
    },
    {
			"destination": "/dev/input",
